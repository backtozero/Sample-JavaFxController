<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Label?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button onAction="#onButtonAction" text="Show Dialog" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
    <Label fx:id="chosenNameLabel" text="Chosen Name" GridPane.columnIndex="0" GridPane.rowIndex="1" visible="false" />
    <Label fx:id="chosenNameText" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.fillWidth="true" visible="false" />
    <Label fx:id="chosenAddressLabel" text="Chosen Address" GridPane.columnIndex="0" GridPane.rowIndex="2" visible="false" />
    <Label fx:id="chosenAddressText" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.fillWidth="true" visible="false" />
</GridPane>
